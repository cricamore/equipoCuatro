<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con esquinas redondeadas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/eliminar_producto" />
            <corners android:radius="8dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
    <!-- Vector Drawable con padding -->
    <item
        android:drawable="@drawable/pen"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="16dp"
        android:gravity="center" />
</layer-list>

